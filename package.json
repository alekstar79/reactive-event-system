{
  "name": "@alekstar79/reactive-event-system",
  "version": "1.0.0",
  "description": "High-performance reactive event system with batched updates, middleware support, and streaming capabilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "event-bus",
    "event-emitter",
    "reactive",
    "reactivity",
    "typescript",
    "middleware",
    "streaming",
    "batched-updates",
    "event-driven"
  ],
  "author": "Alekstar79",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alekstar79/reactive-event-system.git"
  },
  "bugs": {
    "url": "https://github.com/alekstar79/reactive-event-system/issues"
  },
  "homepage": "https://github.com/alekstar79/reactive-event-system#readme",
  "dependencies": {
    "@alekstar79/reactivity": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "eslint-define-config": "^2.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.10"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && yarn build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --silent",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --silent",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test:run",
    "pub:dry-run": "npm run build && npm publish --dry-run",
    "pub:beta": "npm run build:lib && npm publish --tag beta",
    "pub:patch": "npm version patch && npm run build && npm publish --access public",
    "pub:minor": "npm version minor && npm run build && npm publish --access public",
    "pub:major": "npm version major && npm run build && npm publish --access public",
    "release": "npm run test && npm run build && npm publish --access public"
  },
  "publishConfig": {
    "access": "public"
  }
}
